{{> header }}
<h1 class="text-info mt-3 mb-3">Generar reporte</h1>
<div class="card ml-3 mr-3 mt-3">
	<div class="card-header">Datos del empleado</div>
	<div class="card-body">
		<div class="row">
			<div class="col-12">
				<div class="input-group mb-2">
					<div class="input-group-prepend">
						<span class="input-group-text">Buscar</span>
					</div>
					<input type="text" class="form-control" placeholder="Nombre del empleado" id="autoEmp"  data-idEmp="55">
					<div class="input-group-append">
						<button class="btn btn-danger" type="button" data-toggle="tooltip" data-placement="bottom" title="Limpiar" id="clFind"><i class="fas fa-times-circle"></i></button>
						<button class="btn btn-info" type="button" data-toggle="tooltip" data-placement="bottom" title="Buscar" id="fdFind"><i class="fas fa-search"></i></button>					
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-xs-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">idEmpleado</span>
					</div>
					<input type="text" name="idEmp" id="idEmp" value="" class="form-control" minlength="1" maxlength="100" readonly required>
				</div>
			</div>
			<div class="col-12 col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-5">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Nombre</span>
					</div>
					<input type="text" name="nombre" id="nombre" value="" class="form-control" minlength="1" maxlength="100" readonly required>
				</div>
			</div>
			<div class="col-12 col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Departamento</span>
					</div>
					<input name="depto" id="depto" type="text" minlength="1" maxlength="1000" value="" class="form-control" readonly required>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Correo:</span>
					</div>
					<input type="text" name="mail" id="mail" value="" class="form-control" minlength="1" maxlength="100" readonly required>
				</div>
			</div>
			<div class="col-12 col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Telefono</span>
					</div>
					<input name="tel" id="tel" type="text" readonly minlength="1" maxlength="1000" value="" class="form-control" required>                                                                                                                                                                                           
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-4 text-center">
				<button  class="btn btn-success btn-sm btn-block" id="btnEmp">Continuar</button>
			</div>
		</div>
	</div>
</div>
<div class="card ml-3 mr-3 mt-3">
	<div class="card-header">Tiempo del reporte</div>
	<div class="card-body">
		<div class="row">			
			<div class="col-6">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Fecha inicio</span>
					</div>
					<input class="form-control text-center" id="fechaI" name="fechaI" placeholder="YYYY-MM-DD" value="" required>
				</div>	
			</div>		
			<div class="col-6">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Fecha fin</span>
					</div>
					<input class="form-control text-center d_soap" id="fechaF" name="fechaF" placeholder="YYYY-MM-DD" value="" required>
				</div>	
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-4 text-center">
				<button class="btn btn-success btn-sm btn-block" id="btnFecha">Continuar</button>
			</div>
		</div>
	</div>
</div>
<div class="card ml-3 mr-3 mt-3 mb-3">
	<div class="card-header">Registro de actividades</div>
	<div class="card-body">
		<div class="row">
			<div class="col-12 col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Titulo</span>
					</div>
					 <textarea id="titulo" name="titulo" class="form-control" aria-label="With textarea"></textarea>
					<div class="input-group-append">
						<span class="input-group-text" data-toggle="tooltip" data-placement="bottom" title=""></i></span>
					</div>
				</div>
			</div>
			<div class="col-12 col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Objetivo</span>
					</div>
					 <textarea class="form-control" aria-label="With textarea" id="objetivo" name="objetivo"></textarea>
					<div class="input-group-append">
						<span class="input-group-text" data-toggle="tooltip" data-placement="bottom" title=""><i class="far fa-question-circle"></i></span>
					</div>
				</div>
			</div>
			<div class="col-12 col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Descripción</span>
					</div>
					 <textarea class="form-control" aria-label="With textarea" id="descripcion" name="descripcion"></textarea>
					
					<div class="input-group-append">
						<span class="input-group-text" data-toggle="tooltip" data-placement="bottom" title="Atributo requerido para precisar la descripción del bien o servicio cubierto por el presente concepto."><i class="far fa-question-circle"></i></span>
					</div>
				</div>
			</div>
			<div class="col-4">
				<div class="input-group input-group-sm mb-3">
				  <div class="input-group-prepend">
				    <span class="input-group-text">Entregable</span>
				  </div>
				 <input name="" type="text" minlength="1" maxlength="1000" id="entregable" name="entregable" value="" class="form-control" required>
				</div>
			</div>
			<div class="col-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Fecha inicio</span>
					</div>
					<input class="form-control text-center" id="actFechaI" name="actFechaI" placeholder="YYYY-MM-DD" value="" required>
				</div>	
			</div>		
			<div class="col-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Fecha fin</span>
					</div>
					<input class="form-control text-center d_soap" id="actFechaF" name="actFechaF" placeholder="YYYY-MM-DD" value="" required>
				</div>	
			</div>
			<div class="col-4">
				<div class="input-group input-group-sm mb-3">
				  <div class="input-group-prepend">
				    <span class="input-group-text">Beneficio</span>
				  </div>
				 <input type="text" minlength="1" id="beneficio" name="beneficio" maxlength="1000" value="" class="form-control" required>
				</div>
			</div>
			<div class="col-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Comunicación</span>
					</div>
					 <input type="text" minlength="1" maxlength="1000" id="comunicacion" name="comunicacion" class="form-control" required>
				</div>	
			</div>		
			<div class="col-4">
				<div class="input-group input-group-sm mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text maxInput">Entrega</span>
					</div>
					 <input type="text" minlength="1" maxlength="1000" id="entrega"  name="entrega" class="form-control" required>
				</div>	
			</div>
			<div class="col-12">
				<div class="input-group input-group-sm mb-3">
				  <div class="input-group-prepend">
				    <span class="input-group-text">Observaciones</span>
				  </div>
				  <textarea class="form-control" id="observacion" name="observacion" aria-label="With textarea"></textarea>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">
			<div class="col-6 mb-3">
				<button  class="btn btn-info btn-sm btn-block" id="agregar">Agregar actividad</button>
			</div>
		</div>
		<div class="row">
			<div class="col-12 col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12"  id="">
				<div class="table-responsive">
					<table class="table table-sm table-striped table-hover" id="">
						<thead class="thead-dark  text-white text-center">
							<tr>
								<th width="30%" style="border-radius: 7px 0 0 0;" scope="col">Titulo</th>
								<th width="50%" scope="col">Descripción</th>
								<th width="20%" style="border-radius: 0 7px 0 0;" scope="col">Opción</th>					
							</tr>
						</thead>
						<tbody id="">
							<tr class="text-center">
								<td>Titulo</td>
								<td>Descripcion de la actividad realizada</td>
								<td>
									<a class="text-danger" data-toggle="tooltip" data-placement="bottom" title="Eliminar" onclick="delActividad()"><i class="far fa-trash-alt fa-2x"></i></a>
								</td>
							</tr>
						</tbody>					
					</table>
				</div>
			</div>		
		</div>
		<div class="row justify-content-center">
			<div class="col-6 mb-3">
				<button class="btn btn-success btn-sm btn-block " onclick="finalizar();">Finalizar</button>
			</div>
		</div>		
	</div>
</div>
<script type="text/javascript" src="../public/js/empleados.js"></script>
{{> footer }}